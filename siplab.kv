BoxLayout:
    orientation: 'vertical'

    GridLayout:
        cols: 1

        #row1
        Label:
            text: 'Welcome to Virtual Satellite Image Processing and Analysis Laboratory'
            font_size:40
        Widget:
            Button:
                x: self.parent.x + self.parent.width*0.25
                y: self.parent.y
                width: self.parent.width*0.5
                height: self.parent.height*0.75
                on_press: app.siplab("exp1")
                text: 'Viewing Images in Different Bands'
                font_size:25

        Widget:
            Button:
                text: "Contrast Enhancement"
                x: self.parent.x + self.parent.width*0.25
                y: self.parent.y
                on_press: app.siplab("exp2")
                width: self.parent.width*0.5
                height: self.parent.height*0.75
                font_size:25

        Widget:
            Button:
                text: "Smoothing"
                x: self.parent.x + self.parent.width*0.25
                y: self.parent.y
                on_press: app.siplab("exp3")
                width: self.parent.width*0.5
                height: self.parent.height*0.75
                font_size:25

        Widget:
            Button:
                text: "Edge Detection"
                x: self.parent.x + self.parent.width*0.25
                y: self.parent.y
                on_press: app.siplab("exp4")
                width: self.parent.width*0.5
                height: self.parent.height*0.75
                font_size:25

        Widget:
            Button:
                text: "Frequency Domain Filtering (Fourier Transform)"
                x: self.parent.x + self.parent.width*0.25
                y: self.parent.y
                on_press: app.siplab("exp5")
                width: self.parent.width*0.5
                height: self.parent.height*0.75
                font_size:25

        Widget:
            Button:
                text: "Colour Transform"
                x: self.parent.x + self.parent.width*0.25
                y: self.parent.y
                on_press: app.siplab("exp6")
                width: self.parent.width*0.5
                height: self.parent.height*0.75
                font_size:25


