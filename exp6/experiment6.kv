                    id:fchooser
                    y: self.parent.y
                    x: self.parent.x
                    width: self.parent.width
                    height: self.parent.height*1
                    #show preview of selected image
                    on_selection: app.show_selected_img(mainimg,fcw,fchooser,submitbtn,imgname)
